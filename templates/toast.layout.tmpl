{{define "toast"}}
<div class="position-absolute top-0 end-0 toast m-3 align-items-center text-white border-0 {{with .Error}}toast-error{{end}}{{with .Flash}}toast-info{{end}}{{with .Warning}}toast-warn{{end}}" role="alert" aria-live="assertive"
    aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">
            {{with .Error}}
            {{.}}
            {{end}}
            {{with .Flash}}
            {{.}}
            {{end}}
            {{with .Warning}}
            {{.}}
            {{end}}
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
            aria-label="Close"></button>
    </div>
</div>
{{end}}